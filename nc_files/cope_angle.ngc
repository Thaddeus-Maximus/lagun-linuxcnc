o<cope_angle> sub
	; o<cope_angle> call <0|2> <x> <y1><y2> <angle> <zstart><zend> <mode>
	; o<cope_angle> call <1|3> <y> <x1><x2> <angle> <zstart><zend> <mode>

	; 0: +x side
	; 1: +y side
	; 2: -x side
	; 3: -y side

	;G10 L0 ; re-read tool data
	G90	  ; absolute x,y,z
	G91.1 ; incremental i,j,k
	M101  ; enable Z-axis (M102 disables)
	G17   ; select XY plane for arcs

	#<M_CONVENTIONAL> = [FIX[#8/2] MOD 1 EQ 1]
	#<M_BOTHWAYS>     = [FIX[#8/2] MOD 2 EQ 1]
	#<M_PLUNGE>       = [FIX[#8/2] MOD 4 EQ 1]
	#<M_OUTSIDE>      = [FIX[#8/2] MOD 8 EQ 1]

	#<minx> = #1
	#<maxx> = #3
	o1 if [#3 LT #1]
		#<minx> = #3
		#<maxx> = #1
	o1 endif

	#<miny> = #2
	#<maxy> = #4
	o4 if [#4 LT #2]
		#<miny> = #4
		#<maxy> = #2
	o4 endif


	o10 if [#7 EQ 0] ; CCW inside
		; plunge in center
		G0 X[[#1+#3]/2] Y[[#2+#4]/2]
		G0 Z#5
		G1 Z#6


		G1 X[#<maxx>-#5410/2]

		o101 if [#8 GT 0]
			G1 Y[#<maxy>-#8]
			G2 X[#<minx>+#8] Y[#<maxy>-#5410/2] J0 I[+#8-#5410/2]
			G1 X[#<maxx>-#8]
			G2 Y[#<maxy>-#8] X[#<maxx>-#5410/2] I0 J[-#8+#5410/2]
			G1 Y[#<miny>+#8]
			G2 X[#<maxx>-#8] Y[#<miny>+#5410/2] J0 I[-#8+#5410/2]
			G1 X[#<minx>+#8]
			G2 Y[#<miny>+#8] X[#<minx>+#5410/2] I0 J[+#8-#5410/2]
		o101 else
			G1 Y[#<maxy>-#5410/2]
			G1 X[#<minx>+#5410/2]
			G1 Y[#<miny>+#5410/2]
			G1 X[#<maxx>-#5410/2]
			G1 Y[#<maxy>-#5410/2]
		o101 endif

		; go to center and pull out
		G0 X[[#1+#3]/2] Y[[#2+#4]/2]
		G0 Z#5

	o10 elseif [#7 EQ 1] ; CW inside
		; plunge in center
		G0 X[[#1+#3]/2] Y[[#2+#4]/2]
		G0 Z#5
		G1 Z#6

		G1 X[#<maxx>-#5410/2]


		o102 if [#8 GT 0]
			G1 Y[#<maxy>-#8]
			G2 X[#<minx>+#8] Y[#<maxy>-#5410/2] J0 I[+#8-#5410/2]
			G1 X[#<maxx>-#8]
			G2 Y[#<maxy>-#8] X[#<maxx>-#5410/2] I0 J[-#8+#5410/2]
			G1 Y[#<miny>+#8]
			G2 X[#<maxx>-#8] Y[#<miny>+#5410/2] J0 I[-#8+#5410/2]
			G1 X[#<minx>+#8]
			G2 Y[#<miny>+#8] X[#<minx>+#5410/2] I0 J[+#8-#5410/2]
		o102 else
			G1 Y[#<miny>+#5410/2]
			G1 X[#<minx>-#5410/2]
			G1 Y[#<maxy>-#5410/2]
			G1 X[#<maxx>-#5410/2]
			G1 Y[#<miny>+#5410/2]
		o102 endif

		; go to center and pull out
		G0 X[[#1+#3]/2] Y[[#2+#4]/2]
		G0 Z#5

	o10 elseif [#7 EQ 2]
		; plunge at corner
		G0 X[#<minx>-#5410/2] Y[#<miny>-#5410/2]
		G0 Z#5
		G1 Z#6

		o103 if [#8 GT 0]
			G1 Y[#<maxy>-#8]
			G2 X[#<minx>+#8] Y[#<maxy>+#5410/2] J0 I[+#8+#5410/2]
			G1 X[#<maxx>-#8]
			G2 Y[#<maxy>-#8] X[#<maxx>+#5410/2] I0 J[-#8-#5410/2]
			G1 Y[#<miny>+#8]
			G2 X[#<maxx>-#8] Y[#<miny>-#5410/2] J0 I[-#8-#5410/2]
			G1 X[#<minx>+#8]
			G2 Y[#<miny>+#8] X[#<minx>-#5410/2] I0 J[+#8+#5410/2]

		o103 else
			G1 Y[#<maxy>+#5410/2]
			G1 X[#<maxx>+#5410/2]
			G1 Y[#<miny>-#5410/2]
			G1 X[#<minx>-#5410/2]
		o103 endif

		G0 Z#5

	o10 elseif [#7 EQ 3]
		; plunge at corner
		G0 X[#<minx>-#5410/2] Y[#<maxy>+#5410/2]
		G0 Z#5
		G1 Z#6

		o104 if [#8 GT 0]
			G1 Y[#<miny>+#8]
			G2 X[#<minx>+#8] Y[#<miny>-#5410/2] J0 I[+#8+#5410/2]
			G1 X[#<maxx>-#8]
			G2 Y[#<miny>+#8] X[#<maxx>+#5410/2] I0 J[+#8+#5410/2]
			G1 Y[#<maxy>-#8]
			G2 X[#<maxx>-#8] Y[#<maxy>+#5410/2] J0 I[-#8-#5410/2]
			G1 X[#<minx>+#8]
			G2 Y[#<maxy>-#8] X[#<minx>-#5410/2] I0 J[-#8-#5410/2]

		o104 else
			G1 Y[#<miny>-#5410/2]
			G1 X[#<maxx>+#5410/2]
			G1 Y[#<maxy>+#5410/2]
			G1 X[#<minx>-#5410/2]
		o104 endif

		G0 Z#5

	o10 endif

o<bore> endsub

